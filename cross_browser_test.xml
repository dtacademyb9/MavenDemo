<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Cross Browser Test">

    <test name="Chrome Test">

        <parameter name="browserType" value="chrome"/>

        <classes>
            <class name="googleTests.Parametrization">
                <methods>
                    <include name="googleSearchTestCrossBrowser"></include>
                </methods>
            </class>
        </classes>

    </test>

    <test name="Firefox Test">

        <parameter name="browserType" value="firefox"/>

        <classes>
          <class name="googleTests.Parametrization">
              <methods>
                  <include name="googleSearchTestCrossBrowser"></include>
              </methods>
          </class>
        </classes>


    </test>

    <test name="Edge Test">

        <parameter name="browserType" value="edge"/>

        <classes>
            <class name="googleTests.Parametrization">
                <methods>
                    <include name="googleSearchTestCrossBrowser"></include>
                </methods>
            </class>
        </classes>


    </test>




</suite>